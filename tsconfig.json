{
    "compilerOptions": {
        "target": "esnext",
        "moduleResolution": "node",
        "allowJs": true,
        "strictNullChecks": false,
        "emitDeclarationOnly": true,
        "declaration": true,
        "outDir": "./dist/",
        "removeComments": false,
        "allowSyntheticDefaultImports": true,
    },
    "include": [
        "./react/*.js",
        "./vue/*.js",
        "./elements/*.js",
    ],
    "exclude": [
        "node_modules",
        "src",
        "dist",
        "scripts"
    ]
}